<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Image Carousel</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background-color: #f0f0f0;
      margin: 0;
    }
    .carousel {
      position: relative;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    .carousel img {
      width: 200px;
      height: 200px;
      object-fit: cover;
      transition: all 0.5s ease;
      cursor: pointer;
    }
    .carousel .left {
      transform: translateX(-50%);
      opacity: 0.5;
    }
    .carousel .right {
      transform: translateX(50%);
      opacity: 0.5;
    }
    .carousel .center {
      width: 300px;
      height: 300px;
      z-index: 1;
    }
  </style>
</head>
<body>
  <div class="carousel" id="carousel">
    <img src="images/01.png" alt="Image 2" class="left">
    <img src="images/02.jpg" alt="Image 1" class="center">
    <img src="images/03.jpg" alt="Image 3" class="right">
  </div>

  <script>
    const carousel = document.getElementById('carousel');
    const images = carousel.querySelectorAll('img');
    const allImages = [
      'images/01.png',
      'images/02.jpg',
      'images/03.jpg',
      'images/04.jpg',
      'images/05.jpg',
    ];
    let currentIndex = 0; // Set the default active image (e.g., index 0)

    // Function to update the images
    function updateImages() {
      const leftIndex = (currentIndex - 1 + allImages.length) % allImages.length;
      const rightIndex = (currentIndex + 1) % allImages.length;
      images[0].src = allImages[leftIndex];
      images[1].src = allImages[currentIndex];
      images[2].src = allImages[rightIndex];
    }

    // Add click event listeners to the images
    images.forEach((img, index) => {
      img.addEventListener('click', () => {
        if (index === 0) {
          currentIndex = (currentIndex - 1 + allImages.length) % allImages.length;
        } else if (index === 2) {
          currentIndex = (currentIndex + 1) % allImages.length;
        }
        updateImages();
      });
    });

    // Automatic image change every 10 seconds
    setInterval(() => {
      currentIndex = (currentIndex + 1) % allImages.length; // Move to the next image
      updateImages();
    }, 10000); // 10 seconds
  </script>
</body>
</html>
  
